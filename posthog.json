  "cohorts": [
    {
      "name": "Power Users",
      "description": "Users who engage with multiple content types",
      "criteria": {
        "events": [
          "episode_play",
          "glossary_open",
          "stakeholder_map_use"
        ],
        "timeframe": "30 days"
      }
    },
    {
      "name": "Newsletter Subscribers",
      "description": "Users who have subscribed to the newsletter",
      "criteria": {
        "events": ["newsletter_subscribe"],
        "timeframe": "all time"
      }
    }
