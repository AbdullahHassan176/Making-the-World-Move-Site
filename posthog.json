    {
      "key": "stakeholder_map_beta",
      "name": "Stakeholder Map Builder",
      "description": "Enable drag-and-drop stakeholder mapping tool"
    },
    {
      "key": "ai_transcript_search",
      "name": "AI-Powered Transcript Search",
      "description": "Enable semantic search across episode transcripts"
    }
