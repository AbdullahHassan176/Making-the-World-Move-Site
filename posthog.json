      ],
      "conversion_rates": [
        "Episode view to download",
        "Glossary to map builder",
        "Guest profile to booking"
      ]
    },
    {
      "name": "Community",
      "description": "Monitor community engagement and Q&A activity",
      "events": [
        "question_submit",
        "question_vote",
        "poll_vote",
        "episode_share"
      ],
      "metrics": [
        "Questions per episode",
        "Vote participation rate",
        "Social sharing frequency"
      ]
    }
  ],
  "feature_flags": [
    {
      "key": "enhanced_glossary",
      "name": "Enhanced Glossary Tooltips",
      "description": "Enable advanced tooltip interactions in the glossary"
